@media only screen and (max-width: 300px) {

    .flight-timetable-cell-flight-note {
        border: 5px solid blue;
        display: none;
    }
}

@media only screen and (min-width: 301px) {

    .flight-timetable-cell-flight-note {
        display: table-cell;
        width: 12em;

        // чтобы под бордером не было белого фона
        background-clip: padding-box;

        -o-transition: .135s;
        -ms-transition: .135s;
        -moz-transition: .135s;
        -webkit-transition: .135s;
        /* ...and now for the proper property */
        transition: .135s;

        &._hover {
            outline: 0;

            if (ie == 8) {
                backgorund: rgba(0, 255, 0, 0.2) none repeat scroll 0 0;
            } else {
                background: rgba(0, 255, 0, 0.2) none repeat scroll 0 0;
            }
        }

    }
}
