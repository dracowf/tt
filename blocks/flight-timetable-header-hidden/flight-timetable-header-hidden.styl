@media only screen and (max-width: 300px) {
    .flight-timetable-header-hidden {
        display: none;

        &._visible {
            display: table-header-group;
            position: fixed;
            width: inherit;
            //max-width: 75%;
            top: 0px;
        }
    }
}

@media only screen and (min-width: 300px) {
    .flight-timetable-header-hidden {
        display: none;

        &._visible {
            display: table-header-group;
            position: fixed;
            width: inherit;
            max-width: 75%;
            top: 0px;
        }
    }
}
