.timetable-cell-airport-destination {

    display: table-cell;
    border: 1px solid #ffffff;

    text-align: center;
    vertical-align: middle;

    background-clip: padding-box;


    -o-transition: .135s;
    -ms-transition: .135s;
    -moz-transition: .135s;
    -webkit-transition: .135s;
    transition: .135s;

    &._hover {
        background: rgba(224, 224, 224, 0.75) none repeat scroll 0 0;

    }

}

