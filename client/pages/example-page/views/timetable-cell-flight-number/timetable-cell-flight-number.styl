.timetable-cell-flight-number {
    display: none;
    text-align: center;
    vertical-align: middle;
    width: 3%;

    background-clip: padding-box;

    -o-transition: .135s;
    -ms-transition: .135s;
    -moz-transition: .135s;
    -webkit-transition: .135s;
    transition: .135s;

    &._hover {
        outline: 0;

        if (ie == 8) {
            backgorund: rgba(0, 255, 0, 0.2) none repeat scroll 0 0;
        } else {
            background: rgba(0, 255, 0, 0.2) none repeat scroll 0 0;
        }
    }

}

