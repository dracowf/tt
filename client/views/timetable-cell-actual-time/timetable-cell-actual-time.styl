.timetable-cell-actual-time {
    display: table-cell;
    text-align: center;
    position: relative;
    width: 16em;

    // чтобы под бордером не было белого фона
    background-clip: padding-box;

    -o-transition: .135s;
    -ms-transition: .135s;
    -moz-transition: .135s;
    -webkit-transition: .135s;
    /* ...and now for the proper property */
    transition: .135s;

    &__flight-type {
        width: 18px;
        height 15px;
        background: url('images/plane' + '.svg') no-repeat;
        background-size: 15px 15px;
        margin-top: 1px;
        position: absolute;

        left: 50%;
        margin-left: -50px;
        display: inline-block;
    }

    &__flight-number {
        display: inline-block;

    }

    &__plan-time {

    }

    &__aircraft-type {
        color: #999;

    }

    &._hover {
        outline: 0;

        if (ie == 8) {
            backgorund: rgba(0, 255, 0, 0.2) none repeat scroll 0 0;
        } else {
            background: rgba(0, 255, 0, 0.2) none repeat scroll 0 0;
        }
    }

}

