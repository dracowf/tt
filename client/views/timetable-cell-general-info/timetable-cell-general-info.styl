.timetable-cell-general-info {
    display: table-cell;
    border: 1px solid #ffffff;

    text-align: center;
    position: relative;

    vertical-align: middle;
    width: 29%;
    background-clip: padding-box;

    -o-transition: .135s;
    -ms-transition: .135s;
    -moz-transition: .135s;
    -webkit-transition: .135s;
    transition: .135s;

    &__flight-type {
        width: 18px;
        height 15px;
        background: url('images/plane' + '.svg') no-repeat;
        background-size: 15px 15px;
        margin-top: 1px;
        position: absolute;
        left: 50%;
        margin-left: -3em;
        display: inline-block;
    }

    &__flight-number {
        display: inline-block;

    }

    &__plan-time {

    }

    &__aircraft-type {
        color: #999;

    }

    &._hover {
        background: rgba(224, 224, 224, 0.75) none repeat scroll 0 0;

        /*-webkit-box-shadow: inset 0 0 3px 0 rgba(0,0,0,0.5);
        -moz-box-shadow: inset 0 0 3px 0 rgba(0,0,0,0.5);
        box-shadow: inset 0 0 3px 0 rgba(0,0,0,0.5);*/

    }


}

