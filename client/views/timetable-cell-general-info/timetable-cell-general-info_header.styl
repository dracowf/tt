.timetable-cell-general-info_header {
    display: table-cell;
    text-align: center;
    position: relative;
    vertical-align: middle;
    width: 10%;
    background-clip: padding-box;

    -o-transition: .135s;
    -ms-transition: .135s;
    -moz-transition: .135s;
    -webkit-transition: .135s;
    /* ...and now for the proper property */
    transition: .135s;

    &__flight-type {
        display: none;
    }

    outline: 1px solid red;

}

