.timetable-cell-header-general-info_header {
    display: table-cell;
    outline: 1px solid #ffffff;
    text-align: center;
    position: relative;
    vertical-align: middle;
    width: 10%;
    background-clip: padding-box;

    &__flight-type {
        width: 18px;
        height 15px;
        background: url('images/plane' + '.svg') no-repeat;
        background-size: 15px 15px;
        margin-top: 1px;
        position: absolute;
        left: 50%;
        margin-left: -50px;
        display: inline-block;
    }

    &__flight-number {
        display: inline-block;

    }

    &__plan-time {

    }

    &__aircraft-type {
        color: #999;

    }

    &._hover {
        outline: 0;
        background: rgba(0, 255, 0, 0.2) none repeat scroll 0 0;
    }

}

@media only screen and (min-width: 321px) {
    //and (max-width: 480px){
